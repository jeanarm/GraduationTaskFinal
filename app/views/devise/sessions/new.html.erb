

<div class="card login">
<div class="card-body">

<h2><span style="color:white">Log in </span></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

     <div class="input-group mb-3">
        <div class="input-group-prepend">
          <div class="input-group-text"><span class="fa fa-envelope  "></div>
        </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",id:"inlineFormInputGroup", placeholder:"Email" %>
    
  
  </div>

  <div class="input-group mb-2">
  
        <div class="input-group-prepend">
          <div class="input-group-text"><span class="fas fa-lock  "></div>
        </div>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %><%= render "devise/shared/links" %>
  </div>
<% end %>




</div>
</div>

