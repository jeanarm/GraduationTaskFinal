
<div class="card otherscard"  style="background-color: #1B447A"  >
<div class="card-body">
<h1 style= "color: white">New Question</h1>
<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>
      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

 <%= form.text_field :title, class:"form-control", placeholder:"Enter question's  title"  %>
  </div>
<br>
  <div class="field">
   
    <%= form.text_area :content, class:"form-control", placeholder:"Enter question's content"  %>
  </div>
  <br>
  <div class="field">
  <h6 style="color:white">Attach Image <h6>
    <%= form.file_field :image, class:"form-control"  %>
    </div>

  <div class="field">

    <%= form.hidden_field :user_id %>
  </div>

  <div class="actions mt-5" ><%= link_to 'Back', questions_path, class:"actions mt-5" %>
    <%= form.submit %>
  </div>
<% end %>



</div>
</div>

